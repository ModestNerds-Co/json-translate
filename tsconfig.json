{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["dom", "dom.iterable", "ES6"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strictNullChecks": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./app/*"]
        }
    },
    "include": [
        "app",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
